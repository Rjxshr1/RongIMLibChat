<resources>

    <!-- IndexActivity: 底部文字 -->
    <style name="tv_indexFoot">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">5dip</item>
    </style>
    <!-- IndexActivity: 底部图标 -->
    <style name="rb_activity_index_foot_navi">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/footNavi_item_text_size</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">@dimen/footNavi_item_paddingTop</item>
        <item name="android:paddingBottom">@dimen/footNavi_item_paddingBottom</item>
        <item name="android:background">@color/subzero_foot_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_activity_index_foot_text_color</item>
    </style>

    <style name="layout_top_lable">
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="water_drop_top_lable">
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:background">@drawable/ic_dot_red</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="tv_register_tip">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="pw_loading_list">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="com.alex.alexchat:matProg_spinSpeed">1.0</item>
        <item name="com.alex.alexchat:matProg_rimWidth">1dp</item>
        <item name="com.alex.alexchat:matProg_rimColor">#CFD8DC</item>
        <item name="com.alex.alexchat:matProg_progressIndeterminate">true</item>
        <item name="com.alex.alexchat:matProg_linearProgress">true</item>
        <item name="com.alex.alexchat:matProg_fillRadius">true</item>
        <item name="com.alex.alexchat:matProg_circleRadius">20dip</item>
        <item name="com.alex.alexchat:matProg_barSpinCycleTime">500</item>
        <item name="com.alex.alexchat:matProg_barWidth">3dp</item>
        <item name="com.alex.alexchat:matProg_barColor">#009688</item>
    </style>

    <!-- 聊天页面  列表页的属性：开始 -->
    <style name="chat_list_iv_user">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:src">@drawable/logo_user</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">56dp</item>
    </style>

    <style name="chat_list_tv_user_name">
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:maxEms">10</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#686868</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="chat_list_layout_body">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
    <style name="chat_list_layout_body_left" parent="chat_list_layout_body">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>
    <style name="chat_list_layout_body_right" parent="chat_list_layout_body">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="chat_list_tv_content">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="chat_list_iv_content">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">160dp</item>
    </style>
    <!-- 聊天页面  列表页的属性：结束 -->

</resources>