<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EBEBEB"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="ContentDescription,UseCompoundDrawables" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="36dp"
        android:paddingBottom="16dp"
        android:orientation="horizontal"
         >

        <ImageView
            android:id="@+id/iv_chat_voice_status_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/animation_chat_voice_left" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_chat_voice_status_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chat_voice_status_cancel"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_chat_voice_status_speak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chat_voice_status_speak" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_chat_voice_status_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/animation_chat_voice_right" />
    </LinearLayout>

    <TextView
        android:paddingBottom="16dp"
        android:id="@+id/tv_chat_voice_status_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:text="手指向上滑动，取消发送"
        android:textColor="#A5A5A5"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />

</LinearLayout>