<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.alex.alexchat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText" >

    <github.jianghejie.xrecyclerview.XRecyclerView
        android:id="@+id/xrv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBEBEB"
        android:divider="@null"
        android:listSelector="@drawable/selector_listview_item_transparent"
        android:transcriptMode="normal" />

    <github.pnikosis.ProgressWheel
        android:id="@+id/pw"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerInParent="true"
        app:matProg_barColor="#FF5722"
        app:matProg_barSpinCycleTime="500"
        app:matProg_barWidth="5dip"
        app:matProg_circleRadius="40dip"
        app:matProg_fillRadius="true"
        app:matProg_linearProgress="true"
        app:matProg_progressIndeterminate="true"
        app:matProg_rimColor="#CFD8DC"
        app:matProg_rimWidth="3dip"
        app:matProg_spinSpeed="1.0" />

</RelativeLayout>